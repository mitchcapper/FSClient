<Window x:Class="FSClient.InputBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="InputBox" Height="150" Width="269" ResizeMode="NoResize">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition Height="30" Name="rowInput"/>
			<RowDefinition Height="35" />
		</Grid.RowDefinitions>
		<Label Name="lblDesc" Grid.Row="0"/>
		<StackPanel  Grid.Row="1" Margin="10,5,10,0">
			<StackPanel Orientation="Horizontal">
				<Label Content="" FontWeight="Bold" Name="lblInput1" /><TextBox Name="txtInput" Text="Test" VerticalAlignment="Center" Width="190" />
			</StackPanel>
			<StackPanel Orientation="Horizontal" Margin="0,5">
				<Label FontWeight="Bold"  Name="lblInput2" />
				<TextBox Name="txtInput2" Text="best" VerticalAlignment="Center" Width="190" />
			</StackPanel>
		</StackPanel>
		<Grid Grid.Row="2">
			<Grid.ColumnDefinitions>
				<ColumnDefinition />
				<ColumnDefinition />
			</Grid.ColumnDefinitions>
			<Button Content="Ok" Width="75" Grid.Column="0" HorizontalAlignment="Left" Name="btnOk"  Margin="5" Click="btnOk_Click" IsDefault="True" />
			<Button Content="Cancel" Width="75" HorizontalAlignment="Right" Margin="5" Grid.Column="1" Name="btnCancel" Click="btnCancel_Click" IsCancel="True" />
			

		</Grid>
	</Grid>
</Window>
